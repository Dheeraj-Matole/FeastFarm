<% layout('layouts/boilerplate') %>

    <div class="container mt-5"></div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center">Add New Product</h1>
                <form action="/products" method="POST" novalidate class="needs-validation" autocomplete="off">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name:</label>
                        <input type="text" class="form-control" id="name" name="product[name]" required>
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label">Category:</label>
                        <select class="form-select" id="category" name="product[category]" required>
                            <option value="">Select a category</option>
                            <option value="fruit">Fruit</option>
                            <option value="dairy">Dairy</option>
                            <option value="veg">Vegetables</option>
                            <option value="nonVeg">Non-Veg</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price:</label>
                        <input type="number" class="form-control" id="price" name="product[price]" required>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image link:</label>
                        <input type="text" class="form-control" id="image" name="product[image]" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Product</button>
                    <a href="/products" class="btn btn-secondary ms-2">Back</a>
                </form>
            </div>
        </div>
    </div>
